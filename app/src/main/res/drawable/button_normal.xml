<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="bottom"
        android:bottom="0dp"
        android:top="24dp">
        <shape
            android:shape="oval"
            android:useLevel="true">
            <size
                android:width="128dp"
                android:height="80dp" />
            <gradient
                android:angle="90"
                android:endColor="#000"
                android:centerX="0.5"
                android:centerY="0.3"
                android:centerColor="#888"
                android:startColor="#FFF"
                android:type="linear" />
        </shape>

    </item>
    <item
        android:bottom="24dp"
        android:top="12dp"
        android:gravity="bottom"
        android:left="8dp"
        android:right="8dp">
        <shape
            android:shape="oval">
            <solid android:color="#600"/>
            <size
                android:width="112dp"
                android:height="64dp" />
        </shape>

    </item>
    <item
        android:bottom="40dp"
        android:gravity="bottom">
        <shape android:shape="oval">
            <size
                android:width="128dp"
                android:height="64dp" />
            <gradient
                android:angle="90"
                android:endColor="#400"
                android:gradientRadius="250"
                android:startColor="#F00"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
